@model news.Controllers.Models.GetOptionsListsViewcs
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="newsContent" class="control-label"></label>
                <input asp-for="newsContent" class="form-control" />
                <span asp-validation-for="newsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateNews" class="control-label"></label>
                <input asp-for="DateNews" class="form-control" />
                <span asp-validation-for="DateNews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryList" class="control-label"></label>
               <select name="CategoryId" asp-items="Model.CategoryList"></select>
               
            </div>
            <div class="form-group">
                <label asp-for="NewsAuthors" class="control-label"></label>
                @Html.ListBoxFor(m => m.SelectedAuthors, new SelectList(Model.NewsAuthors, "Id", "FullName"))
            </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

